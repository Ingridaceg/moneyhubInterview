{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./src/dist",
    "rootDir": "./src",
    "strict": true,
    "typeRoots": ["./src/types", "node_modules/@types"],
    "types": ["jest", "node", "express"],
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "forceConsistentCasingInFileNames": true
  },
  "include":  ["src/types/**/*", "src/**/*"],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}
